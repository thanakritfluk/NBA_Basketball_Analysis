<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Matches compare</title>
</head>

<body class="match_body">

<%- include navbar %>

<div class="container">
    <div class="title-match">
        <img src="/images/match-logo.png" class="img-match">
    </div>
    <div class="compare-border">
        <div class="row input justify-content-center compare-row">
            <div class="col-4-xs team_input">
                <input class="teamInput team_input_one" type="text" placeholder="Team name">
            </div>

            <div class="col-4-xs">
                <p class="vs">VS</p>
            </div>

            <div class="col-4-xs team_input">
                <input class="teamInput team_input_two" type="text" placeholder="Team name">
            </div>
        </div>
        <div class="row justify-content-center">
                <button type="submit" id="compare_submit" class="btn btn-dark compare-button">Compare</button>
        </div>
    </div>
    <div class="chart-wrapper">
        <canvas id="match_chart"></canvas>
    </div>
    <div class="chart-wrapper">
            <canvas id="compare_line"></canvas>
    </div>
</div>

<script src="/javascripts/typeahead.js"></script>
<script src="/javascripts/matches.js"></script>
<script>
    team_name = '<%-team_name%>'
    result = '<%-result%>'            
</script>
</body>

</html>
